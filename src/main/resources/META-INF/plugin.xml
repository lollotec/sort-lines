<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.jodiew.sortlines</id>
    <name>Line Order Linter</name>
    <vendor email="jodie.weldon@lollotec.com" url="https://lollotec.com">Jodie Weldon - Lollotec</vendor>
  
    <depends>com.intellij.modules.platform</depends>
  
    <resource-bundle>messages.SortLinesBundle</resource-bundle>
  
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Sort File"
                  implementationClass="com.github.jodiew.sortlines.lang.SortFileType"
                  fieldName="INSTANCE"
                  language="Sort"
                  extensions="sort" />
        <lang.parserDefinition language="Sort"
                               implementationClass="com.github.jodiew.sortlines.lang.SortParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Sort"
                                       implementationClass="com.github.jodiew.sortlines.lang.SortSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.github.jodiew.sortlines.lang.SortColorSettingsPage"/>
        <multiHostInjector implementation="com.github.jodiew.sortlines.lang.SortInjector"/>
        <annotator language=""
                   implementationClass="com.github.jodiew.sortlines.lang.SortAnnotator"/>
        <localInspection language=""
                         key="inspection.line.order.display.name"
                         groupKey="inspection.line.order.group.name"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.jodiew.sortlines.LineOrderInspection"/>
        <codeInsight.lineMarkerProvider language=""
                                        implementationClass="com.github.jodiew.sortlines.SortLineMarkerProvider"/>
    </extensions>
</idea-plugin>
