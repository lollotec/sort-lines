<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.jodiew.sortlines</id>
    <name>Sort Lines with Comment</name>
    <vendor email="jodie.weldon@lollotec.com" url="https://lollotec.com">Jodie Weldon - Lollotec</vendor>
  
    <depends>com.intellij.modules.platform</depends>
  
    <resource-bundle>messages.SortBundle</resource-bundle>
  
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Sort File"
                  implementationClass="com.github.jodiew.sortlines.lang.SortFileType"
                  fieldName="INSTANCE"
                  language="Sort"
                  extensions="sort" />
        <lang.parserDefinition language="Sort"
                               implementationClass="com.github.jodiew.sortlines.lang.SortParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Sort"
                                       implementationClass="com.github.jodiew.sortlines.highlight.SortSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.github.jodiew.sortlines.lang.colors.SortColorSettingsPage"/>
        <multiHostInjector implementation="com.github.jodiew.sortlines.lang.SortInjector"/>
        <annotator language=""
                   implementationClass="com.github.jodiew.sortlines.lang.SortAnnotator"/>
        <codeInsight.lineMarkerProvider language=""
                                        implementationClass="com.github.jodiew.sortlines.lang.SortLineMarkerProvider"/>
        <completion.contributor language="Sort"
                                implementationClass="com.github.jodiew.sortlines.lang.SortCompletionContributor"/>
        <localInspection language=""
                         key="inspection.com.github.jodiew.sortlines.line.order.display.name"
                         groupKey="inspection.com.github.jodiew.sortlines.line.order.group.name"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.jodiew.sortlines.LineOrderInspection"/>
        <projectConfigurable parentId="tools"
                             instance="com.github.jodiew.sortlines.settings.SortSettingsConfigurable"
                             id="com.github.jodiew.sortlines.settings.SortSettingsConfigurable"
                             key="settings.com.github.jodiew.sortlines.name"/>
    </extensions>
</idea-plugin>
