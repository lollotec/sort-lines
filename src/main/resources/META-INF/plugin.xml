<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.jodiew.sortLines</id>
    <name>Line Order Linter</name>
    <vendor email="jodie.weldon@lollotec.com" url="https://lollotec.com">Jodie Weldon - Lollotec</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.SortLinesBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language=""
                         key="inspection.line.order.display.name"
                         groupKey="inspection.line.order.group.name"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.jodiew.sortLines.LineOrderInspection"/>
        <codeInsight.lineMarkerProvider language=""
                                        implementationClass="com.github.jodiew.sortLines.SortLineMarkerProvider"/>
    </extensions>
</idea-plugin>
